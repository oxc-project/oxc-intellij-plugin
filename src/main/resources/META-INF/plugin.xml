<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.oxc.project.oxcintellijplugin</id>
    <name>Oxc</name>
    <vendor email="boshenc@gmail.com" url="https://oxc.rs">Oxc</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <resource-bundle>messages.OxcBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Oxc" displayType="BALLOON"/>
        <iconProvider implementation="com.github.oxc.project.oxcintellijplugin.OxcIconProvider"/>
        <platform.lsp.serverSupportProvider
                implementation="com.github.oxc.project.oxcintellijplugin.lsp.OxlintLspServerSupportProvider"/>
        <platform.lsp.serverSupportProvider
                implementation="com.github.oxc.project.oxcintellijplugin.lsp.OxfmtLspServerSupportProvider"/>

        <projectConfigurable
                parentId="tools"
                instance="com.github.oxc.project.oxcintellijplugin.settings.OxlintConfigurable"
                id="com.github.oxc.project.oxcintellijplugin.settings.OxlintConfigurable"
                nonDefaultProject="false"
                bundle="messages.OxcBundle"
                key="oxlint.name"
        />
        <projectConfigurable
                parentId="tools"
                instance="com.github.oxc.project.oxcintellijplugin.settings.OxfmtConfigurable"
                id="com.github.oxc.project.oxcintellijplugin.settings.OxfmtConfigurable"
                nonDefaultProject="false"
                bundle="messages.OxcBundle"
                key="oxlint.name"
        />
        <actionOnSaveInfoProvider
                id="OxcOnSaveInfoProvider"
                implementation="com.github.oxc.project.oxcintellijplugin.settings.OxcOnSaveInfoProvider"
                order="after FormatOnSaveInfoProvider, after EsLintOnSaveInfoProvider, before FileWatcherOnSaveInfoProvider, before UploadOnSaveInfoProvider"
        />

        <actionOnSave
                id="OxlintFixAllOnSaveAction"
                implementation="com.github.oxc.project.oxcintellijplugin.actions.OxlintFixAllOnSaveAction"
                order="first, before FormatOnSaveAction"
        />
        <actionOnSave
                id="OxfmtFixAllOnSaveAction"
                implementation="com.github.oxc.project.oxcintellijplugin.actions.OxfmtFixAllOnSaveAction"
                order="first, after OxlintFixAllOnSaveAction"
        />
    </extensions>

    <extensions defaultExtensionNs="JavaScript">
        <JsonSchema.ProviderFactory
                implementation="com.github.oxc.project.oxcintellijplugin.OxlintSchemaProviderFactory"/>
        <JsonSchema.ProviderFactory
                implementation="com.github.oxc.project.oxcintellijplugin.OxfmtSchemaProviderFactory"/>
    </extensions>

    <actions>
        <action
                id="OxlintApplyFixAllAction"
                text="Apply Oxlint Quick Fixes"
                description="Apply Oxlint quick fixes"
                class="com.github.oxc.project.oxcintellijplugin.actions.OxlintFixAllAction"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action
                id="OxfmtApplyFixAllAction"
                text="Apply Oxfmt Quick Fixes"
                description="Apply Oxfmt quick fixes"
                class="com.github.oxc.project.oxcintellijplugin.actions.OxfmtFixAllAction"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <applicationListeners>
        <listener
                class="com.github.oxc.project.oxcintellijplugin.listeners.OxlintConfigWatcher"
                topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"
        />
        <listener
                class="com.github.oxc.project.oxcintellijplugin.listeners.OxfmtConfigWatcher"
                topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"
        />
    </applicationListeners>

    <projectListeners>
        <listener class="com.github.oxc.project.oxcintellijplugin.listeners.OxlintEditorWatcher"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
        <listener class="com.github.oxc.project.oxcintellijplugin.listeners.OxfmtEditorWatcher"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>
</idea-plugin>
